<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define your beans here -->

    <!--    define bean for dependency -->

    <bean id="myFortune" class="com.java.springdemo.HappyFortuneService">
    </bean>

    <bean id="myCoach" class="com.java.springdemo.BaseballCoach">
        <!--        set up constructor injection -->
        <constructor-arg ref="myFortune"/>
    </bean>

    <bean id="trackCoach" class="com.java.springdemo.TrackCoach">
        <constructor-arg ref="myFortune"/>
        <property name="email" value="ivan.ivanov@gmail.com"/>
        <property name="team" value="Man City"/>
        <property name="coachName" value="Ivan Ivanov"/>
    </bean>

    <bean id="footballCoach" class="com.java.springdemo.FootballCoach">
        <!--        set up setter injection -->
        <property name="fortuneService" ref="myFortune"/>
        <property name="email" value="testemail@gmail.com"/>
        <property name="team" value="Man Utd."/>
        <property name="coachName" value="Greg Navalsky"/>
    </bean>

</beans>

